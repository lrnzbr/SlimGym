<h1>Listing routines</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Muscle group</th>
      <th>Repititions</th>
      <th>Sets</th>
      <th>Equipment</th>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routines.each do |routine| %>
      <tr>
        <td><%= routine.title %></td>
        <td><%= routine.subtitle %></td>
        <td><%= routine.muscle_group_id %></td>
        <td><%= routine.repititions %></td>
        <td><%= routine.sets %></td>
        <td><%= routine.equipment %></td>
        <td><%= routine.instructions %></td>
        <td><%= link_to 'Show', routine %></td>
        <td><%= link_to 'Edit', edit_routine_path(routine) %></td>
        <td><%= link_to 'Destroy', routine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

